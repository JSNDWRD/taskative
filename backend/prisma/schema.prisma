generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  firstName String
  lastName String
  age Int
  role Role @default(USER)
  logs Log[]
  notes Note[]
  createdAt DateTime @default(now())
}

model Log {
  id Int @id @default(autoincrement())
  author User? @relation(fields: [authorId], references: [id])
  authorId Int?
  title String @db.VarChar(255)
  startAt DateTime?
  endAt DateTime?
  status Status @default(NOT_STARTED)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Note {
  id Int @id @default(autoincrement())
  author User? @relation(fields: [authorId], references: [id])
  authorId Int?
  title String @db.VarChar(255)
  description String
  content String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}

enum Status {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}